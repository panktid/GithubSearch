<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="5dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgViewAvatar"
        android:layout_width="100dp"
        android:layout_centerVertical="true"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/txtRepoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:ellipsize="end"
        android:text="Game of Life"
        android:layout_toRightOf="@+id/imgViewAvatar"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtRepoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_below="@+id/txtRepoName"
        android:text="Game of Life"
        android:layout_toRightOf="@+id/imgViewAvatar"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/txtRepoDesc"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="*"
        android:layout_toRightOf="@+id/imgViewAvatar"
        android:textSize="12sp" />

</RelativeLayout>